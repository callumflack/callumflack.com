!!!5
%html
  %head
    %title My Website
    -# 2 meta lines from frameless to enable adaptive scaling
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %meta{:name => "description", :content => "Callum Flack is a designer for page and screen. He plans, design and builds visual communications."}
    %link{:rel => "shortcut icon", :href => "assets/favicon.png"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "assets/icon.png"}
    = stylesheet_tag :application
    / = javascript_tag "http://use.typekit.com/byz1jhq.js"
    / :javascript
    /   try{Typekit.load();}catch(e){}    
  
  %body{ class: @body_class }
    
    %header
      %nav
        %a.on-home{:href => "/home"} Home
        %a.on-work{:href => "/work"} Work
        %a.on-journal{:href => "/journal"} Journal
        %a.on-profile{:href => "/profile"} Profile

    ~ yield
    = javascript_tag :application