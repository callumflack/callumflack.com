!!!5
%html
  %head
    %title My Website
    -# 2 meta lines from frameless to enable adaptive scaling
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %meta{:name => "description", :content => "Callum Flack is a graphic designer who codes."}
    %link{:rel => "shortcut icon", :href => "assets/favicon.png"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "assets/icon.png"}
    = stylesheet_tag :application
    = javascript_tag "http://use.typekit.com/byz1jhq.js"
    :javascript
      try{Typekit.load();}catch(e){}
  %body{ class: @body_class }
    %header
      .manifesto
        = link_tag "Callum, Designing", "/"
      %nav.main
        = link_tag "Journal", "/journal"
        = link_tag "Work", "/work"
        = link_tag "Profile", "/profile"
        = link_tag "Info", "#", class: "details-link"
    ~ yield
    = javascript_tag :application
